{
  "title": "Vial-Style Layers (Built-in Keyboard)",
  "rules": [
    {
      "description": "Vial Layer 1 (Hold Space)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ],
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "vial_layer_1_active",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "vial_layer_1_active",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "device_if",
              "identifiers": {
                "is_keyboard": true,
                "is_pointing_device": false
              }
            }
          ]
        }
      ]
    },
